include layout
  body
    section.wrapper
      section.content.about
        .container
          .row.sub_content
            .who
              .col-lg-6.col-sm-6
                .img-about
                  #slider.swipe
                    ul.swipe-wrap
                      li
                        img(src=item.image_url, alt='')
                      li
                        img(src=item.image_url, alt='')
                      li
                        img(src=item.image_url, alt='')
                    .swipe-navi
                      .swipe-left(onclick='mySwipe.prev()')
                        i.fa.fa-chevron-left
                      .swipe-right(onclick='mySwipe.next()')
                        i.fa.fa-chevron-right
              .col-lg-6.col-sm-6
                .dividerHeading
                  h4
                    span #{item.id}
                ul.nav.nav-tabs
                  li.active
                    a(href='#detailtab', data-toggle='tab') Details & Review
                  li
                    a(href='#Recommended', data-toggle='tab') Recommended
                .tab-content.clearfix
                  #detailtab.tab-pane.fade.active.in
                    ul.recent_tab_list
                      li
                        p
                          |  Address :  #{item.location.display_address}
                          br
                          |  Phone : #{item.display_phone}
                          br
                          |  Rating :  
                          img(src=item.rating_img_url_small, alt='')
                          br
                          b  #{item.status}
                          br
                          .read.col-lg-3
                            a.btn.btn-default(href='/map?lat='+item.location.coordinate.latitude+'&log='+item.location.coordinate.longitude) Show Map
                          
                      li.last
                        b Review
                        p
                          |   
                          img(src=item.snippet_image_url, alt='') 
                        p
                          | #{item.snippet_text}
                  

                  #Recommended.tab-pane.fade
                        //for more informaiton
                        
    
    include footer
    script(type='text/javascript', src='/javascripts/jquery-1.10.2.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/jquery.easing.1.3.js')
    script(src='/javascripts/retina-1.1.0.min.js')
    script(type='text/javascript', src='/javascripts/jquery.cookie.js')
    // jQuery cookie
    script(type='text/javascript', src='/javascripts/styleswitch.js')
    // Style Colors Switcher
    script(type='text/javascript', src='/javascripts/owl.carousel.min.js')
    script(type='text/javascript', src='/javascripts/jflickrfeed.js')
    script(type='text/javascript', src='/javascripts/jquery.magnific-popup.min.js')
    script(type='text/javascript', src='/javascripts/jquery.isotope.min.js')
    script(type='text/javascript', src='/javascripts/swipe.js')
    script(type='text/javascript', src='/javascripts/jquery.sticky.js')
    script(src='/javascripts/main.js')
    

